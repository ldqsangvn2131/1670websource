<!DOCTYPE html>
<html lang="en" style="user-select:none;">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - FPT HR System</title>

    <script src="~/Assets/plugins/jquery/jquery.min.js"></script>

    <link rel="stylesheet" href="~/Assets/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <link rel="icon" type="image/x-icon" href="~/Assets/dist/img/favicon.png">
    <link rel="stylesheet" href="~/Assets/dist/css/adminlte.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        @if (HttpContext.Current.Session["Username"] != null)
                        {
                            <a class="nav-link" data-toggle="dropdown" href="#">
                                <p>
                                    Hi,
                                    <strong>@Session["Username"]</strong>&nbsp;!&nbsp;
                                    <i class="fas fa-sort-down"></i>
                                </p>
                            </a><div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                <div class="dropdown-divider"></div>
                                @if (HttpContext.Current.Session["AccountType"].ToString() == "Trainer")
                                {
                                    <a href="@Url.Action("Profiles", "Trainers")" class="dropdown-item">
                                        <i class="float-right fas fa-user-edit"></i>
                                        <span>View profile</span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("Logout", "Accounts")" class="dropdown-item">
                                        <i class="float-right fas fa-sign-out-alt"></i>
                                        <span>Log out</span>
                                    </a>
                                }
                                else if (HttpContext.Current.Session["AccountType"].ToString() == "Trainee")
                                {
                                    <a href="@Url.Action("Profiles", "Trainees")" class="dropdown-item">
                                        <i class="float-right fas fa-user-edit"></i>
                                        <span>View profile</span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("Logout", "Accounts")" class="dropdown-item">
                                        <i class="float-right fas fa-sign-out-alt"></i>
                                        <span>Log out</span>
                                    </a>
                                }
                                else
                                {
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("Logout", "Accounts")" class="dropdown-item">
                                        <i class="float-right fas fa-sign-out-alt"></i>
                                        <span>Log out</span>
                                    </a>
                                }
                            </div>
                        }
                    </li>
                </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-5">
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <img src="~/Assets/dist/img/fptlogo.png" alt="FPT Company Logo" class="brand-image">
                <span class="brand-text font-weight-bold">FPT HR System</span>
            </a>
            <div class="sidebar">
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p>
                                    Home
                                </p>
                            </a>
                        </li>
                        @if (HttpContext.Current.Session["Username"] == null)
                        {
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-list-alt"></i>
                                    <p>
                                        Management
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    @if (HttpContext.Current.Session["AccountType"].ToString() == "Trainer" || HttpContext.Current.Session["AccountType"].ToString() == "Trainee")
                                    {
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Trainers")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Trainers</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Trainees")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Trainees</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "CourseDetails")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Course details</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Courses")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Courses</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Topics")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Topics</p>
                                            </a>
                                        </li>
                                    }
                                    @if (HttpContext.Current.Session["AccountType"].ToString() == "Admin")
                                    {
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Accounts")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Accounts</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Staffs")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Staffs</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Trainers")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Trainers</p>
                                            </a>
                                        </li>
                                    }
                                    else if (HttpContext.Current.Session["AccountType"].ToString() == "Staff")
                                    {
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Category")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Category</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Accounts")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Account</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Trainers")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Trainers</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Trainees")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Trainees</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Courses")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Courses</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "CourseDetails")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Course details</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Topics")" class="nav-link">
                                                <i class="fas fa-chevron-right nav-icon"></i>
                                                <p>Topics</p>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <hr class="hr1" />
                    @RenderBody()
                    <hr class="hr1" />
                    <style>
                        .hr1 {
                            color: #f17126;
                            background-color: #f17126;
                        }
                    </style>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 0.1
            </div>
            <strong>Copyright &copy; 2021 FPT HR System.</strong> All rights reserved.
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Assets/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Assets/plugins/jszip/jszip.min.js"></script>
    <script src="~/Assets/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/Assets/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/Assets/dist/js/adminlte.min.js"></script>
    <script src="/Assets/dist/js/demo.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
    <script type="text/javascript">
        document.getElementById('demo2').type = 'date';
    </script>
</body>
</html>
