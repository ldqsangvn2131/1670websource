@model _1670webdemo.Models.Account
@{ ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml"; }
@{ if (HttpContext.Current.Session["Username"] != null)
    {
        Response.Redirect("~/Home/");
    } }
<div class="center1">
    <div class="login-box elevation-5">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <img src="~/Assets/dist/img/fptlogo.png" alt="FPT Company Logo" style="width:100px;height:100px;" />
            </div>
            <div class="card-body">
                <h4 class="login-box-msg">Login form</h4>
                @using (Html.BeginForm())
                {<div class="input-group mb-3">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" },autofocus="on" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user-alt"></span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                                    <div class="input-group mb-3">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "demo1", autocomplete = "off" } })
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-append">
                                                            <label for="cb1"><input id="cb1" type="checkbox" onclick="revealpassword()">&nbsp;Show the Password</label>
                                                        </div>
                                                    </div>
                                                                    <script type="text/javascript">
                                                                        document.getElementById('demo1').type = 'password';
                                                                    </script>
                                                                                    <script>
                                                                                        function revealpassword() {
                                                                                            var getinput = document.getElementById("demo1");
                                                                                            if (getinput.type === "password") {
                                                                                                getinput.type = "text";
                                                                                            } else {
                                                                                                getinput.type = "password";
                                                                                            }
                                                                                        }
                                                                                    </script>
                                                                                                    <div class="row">
                                                                                                        <!-- /.col -->
                                                                                                        <div class="col-12">
                                                                                                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                                                                                        </div>
                                                                                                        <!-- /.col -->
                                                                                                    </div>}
            </div>
        </div>
    </div>
</div>